{
  "name": "capbit",
  "version": "0.1.0",
  "description": "Entity-relationship bitmask access control system",
  "main": "index.js",
  "scripts": {
    "build": "napi build --release",
    "build:debug": "napi build",
    "build:server": "cargo build --release --features server --bin capbit-server",
    "server": "cargo run --release --features server --bin capbit-server --",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:scale": "SCALE_TEST_MODE=quick vitest run tests/scale.test.js",
    "test:scale:medium": "SCALE_TEST_MODE=medium vitest run tests/scale.test.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "vitest": "^1.2.0"
  },
  "napi": {
    "name": "capbit",
    "triples": {}
  },
  "license": "MIT"
}
